<div class="row">
  <% @flats.each do |flat| %>
    <div class='col-sm-12 col-md-6 col-lg-4'>
      <div class="flat-card">
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div class="flex">
            <div class="flex">
              <i class="far fa-user mr-2"></i>
              <span><%= flat.number_of_guests %></span>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-euro-sign mr-2"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="flat-card-actions">
          <%= link_to 'More infos', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat), class: 'ml-3 text-warning' %>
          <%= link_to "Delete", flat_path(flat),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'ml-3 text-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
